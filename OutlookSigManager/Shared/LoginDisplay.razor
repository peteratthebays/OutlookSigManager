@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity?.Name!
        <a class="nav-link btn btn-link" href="MicrosoftIdentity/Account/SignOut">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a href="MicrosoftIdentity/Account/SignIn">Log in</a>
    </NotAuthorized>
</AuthorizeView>
