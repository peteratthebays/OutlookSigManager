@using OutlookSigManager.Services

<div class="audit-progress @(IsVisible ? "visible" : "hidden")">
    <div class="progress-header">
        <span class="progress-label">@StatusText</span>
        <span class="progress-percentage">@Progress.PercentComplete.ToString("F0")%</span>
    </div>
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated"
             role="progressbar"
             style="width: @Progress.PercentComplete%"
             aria-valuenow="@Progress.PercentComplete"
             aria-valuemin="0"
             aria-valuemax="100">
        </div>
    </div>
    <div class="progress-detail">
        Processing @Progress.ProcessedUsers of @Progress.TotalUsers users
        @if (!string.IsNullOrEmpty(Progress.CurrentUserName))
        {
            <span class="current-user">- @Progress.CurrentUserName</span>
        }
    </div>
</div>

@code {
    [Parameter]
    public AuditProgress Progress { get; set; } = new();

    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public string StatusText { get; set; } = "Running Audit...";
}
