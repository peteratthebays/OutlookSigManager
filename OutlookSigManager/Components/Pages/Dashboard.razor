@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Identity.Web
@using Microsoft.JSInterop
@using OutlookSigManager.Models
@using OutlookSigManager.Services
@using OutlookSigManager.Components.Dashboard
@attribute [Authorize]
@rendermode InteractiveServer
@inject ISignatureAuditService AuditService
@inject IGraphUserService GraphUserService
@inject IExchangeSignatureService ExchangeSignatureService
@inject ISignatureTemplateService TemplateService
@inject ILogger<Dashboard> Logger
@inject MicrosoftIdentityConsentAndConditionalAccessHandler ConsentHandler
@inject NavigationManager NavigationManager

<PageTitle>Signature Audit Dashboard</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 mb-1">Signature Audit Dashboard</h1>
            <p class="text-muted mb-0">Audit and manage email signatures across your organization</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary"
                    @onclick="LoadUsersAsync"
                    disabled="@IsLoadingUsers">
                @if (IsLoadingUsers)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                }
                <i class="bi bi-arrow-clockwise me-1"></i>Refresh Users
            </button>
            <button class="btn btn-primary btn-lg"
                    @onclick="RunAuditAsync"
                    disabled="@IsAuditRunning">
                @if (IsAuditRunning)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span>Running Audit...</span>
                }
                else
                {
                    <i class="bi bi-play-fill me-2"></i>
                    <span>Run Full Audit</span>
                }
            </button>
        </div>
    </div>

    @if (IsAuditRunning)
    {
        <AuditProgressBar Progress="@CurrentProgress" IsVisible="true" />
    }

    @if (RequiresReauth)
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Authentication Required:</strong> Your session needs to be refreshed to access Microsoft Graph.
            <a href="@ReauthUrl" class="alert-link ms-2">Click here to re-authenticate</a>
        </div>
    }

    @if (DeployMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @DeployMessage
            <button type="button" class="btn-close" @onclick="ClearDeployMessage" aria-label="Close"></button>
        </div>
    }

    @if (SignaturePreviewHtml != null)
    {
        <div class="card mb-4 border-success">
            <div class="card-header bg-success text-white">
                <i class="bi bi-eye me-2"></i>Signature Preview
            </div>
            <div class="card-body">
                <div class="border rounded p-3 bg-white">
                    @((MarkupString)SignaturePreviewHtml)
                </div>
                <div class="mt-3">
                    <h6>How to use:</h6>
                    <ol class="mb-0">
                        <li>Open <strong>Outlook</strong> (web or desktop)</li>
                        <li>Go to <strong>Settings</strong> → <strong>Mail</strong> → <strong>Compose and reply</strong></li>
                        <li>Under <strong>Email signature</strong>, click in the editor</li>
                        <li>Press <strong>Ctrl+V</strong> to paste</li>
                        <li>Click <strong>Save</strong></li>
                    </ol>
                </div>
            </div>
        </div>
    }

    @if (ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error:</strong> @ErrorMessage
            <button type="button" class="btn-close" @onclick="() => ErrorMessage = null" aria-label="Close"></button>
        </div>
    }

    <!-- Single User Audit -->
    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-person-check me-2"></i>Audit Single User
        </div>
        <div class="card-body">
            <div class="row align-items-end">
                <div class="col-md-6">
                    <label class="form-label">Select User</label>
                    <div class="position-relative">
                        <input type="text" class="form-control"
                               @bind="UserSearchText"
                               @bind:event="oninput"
                               @onfocus="() => ShowUserDropdown = true"
                               placeholder="@(IsLoadingUsers ? "Loading users..." : "Start typing to search...")"
                               disabled="@IsLoadingUsers" />
                        @if (ShowUserDropdown && FilteredUsers.Any())
                        {
                            <div class="dropdown-menu show w-100" style="max-height: 300px; overflow-y: auto;">
                                @foreach (var user in FilteredUsers.Take(20))
                                {
                                    <button class="dropdown-item" type="button" @onclick="() => SelectUser(user)">
                                        <strong>@user.DisplayName</strong>
                                        <br /><small class="text-muted">@user.Mail</small>
                                    </button>
                                }
                                @if (FilteredUsers.Count() > 20)
                                {
                                    <div class="dropdown-item text-muted">...and @(FilteredUsers.Count() - 20) more</div>
                                }
                            </div>
                        }
                    </div>
                    @if (SelectedUser != null)
                    {
                        <div class="mt-2">
                            <span class="badge bg-primary">
                                @SelectedUser.DisplayName (@SelectedUser.Mail)
                                <button type="button" class="btn-close btn-close-white ms-2"
                                        style="font-size: 0.6rem;"
                                        @onclick="ClearSelectedUser"></button>
                            </span>
                        </div>
                    }
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-primary w-100"
                            @onclick="AuditSingleUserAsync"
                            disabled="@(IsTestingUser || IsCopying || SelectedUser == null)">
                        @if (IsTestingUser)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Audit User
                    </button>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-success w-100"
                            @onclick="CopySignatureToClipboard"
                            disabled="@(IsTestingUser || IsCopying || SelectedUser == null)">
                        @if (IsCopying)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-clipboard-check me-1"></i>Copy Signature
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (AuditSummary != null)
    {
        <AuditSummaryCards Summary="@AuditSummary" />

        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>
                    <i class="bi bi-table me-2"></i>Audit Results
                </span>
                <small class="text-muted">
                    Last run: @AuditSummary.AuditTimestamp.ToLocalTime().ToString("g")
                    (took @AuditSummary.AuditDuration.TotalSeconds.ToString("F1")s)
                </small>
            </div>
            <div class="card-body">
                <AuditResultsTable Results="@AuditResults" OnViewDetails="@ShowUserDetails" />
            </div>
        </div>
    }
    else if (!IsAuditRunning && !IsTestingUser)
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-clipboard-check fs-1 text-muted mb-3"></i>
                <h4>No Audit Results</h4>
                <p class="text-muted mb-4">
                    Select a user above to audit individually, or click "Run Full Audit" to audit all users.
                </p>
            </div>
        </div>
    }
</div>

<UserSignatureDetail Result="@SelectedResult"
                     IsVisible="@(SelectedResult != null)"
                     OnClose="@CloseUserDetails" />

@code {
    private bool IsAuditRunning { get; set; }
    private bool IsTestingUser { get; set; }
    private bool IsLoadingUsers { get; set; }
    private bool RequiresReauth { get; set; }
    private bool ShowUserDropdown { get; set; }
    private string? DeployMessage { get; set; }
    private string? ReauthUrl { get; set; }
    private string _userSearchText = string.Empty;
    private string UserSearchText
    {
        get => _userSearchText;
        set
        {
            _userSearchText = value;
            ShowUserDropdown = true;
            // Clear selection if user is typing something different
            if (SelectedUser != null &&
                !value.Equals(SelectedUser.DisplayName, StringComparison.OrdinalIgnoreCase) &&
                !value.Equals(SelectedUser.Mail, StringComparison.OrdinalIgnoreCase))
            {
                SelectedUser = null;
            }
        }
    }
    private UserProfile? SelectedUser { get; set; }
    private IReadOnlyList<UserProfile> AllUsers { get; set; } = Array.Empty<UserProfile>();
    private AuditProgress CurrentProgress { get; set; } = new();
    private IReadOnlyList<SignatureAuditResult> AuditResults { get; set; } = Array.Empty<SignatureAuditResult>();
    private AuditSummary? AuditSummary { get; set; }
    private SignatureAuditResult? SelectedResult { get; set; }
    private string? ErrorMessage { get; set; }
    private CancellationTokenSource? _cancellationTokenSource;

    private IEnumerable<UserProfile> FilteredUsers
    {
        get
        {
            if (string.IsNullOrWhiteSpace(UserSearchText))
                return AllUsers;

            var search = UserSearchText.ToLowerInvariant();
            return AllUsers.Where(u =>
                (u.DisplayName?.ToLowerInvariant().Contains(search) ?? false) ||
                (u.Mail?.ToLowerInvariant().Contains(search) ?? false) ||
                (u.Department?.ToLowerInvariant().Contains(search) ?? false));
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadUsersAsync();
    }

    private async Task LoadUsersAsync()
    {
        if (IsLoadingUsers) return;

        IsLoadingUsers = true;
        ErrorMessage = null;

        try
        {
            Logger.LogInformation("Loading users from Graph API");
            AllUsers = await GraphUserService.GetAllUsersAsync();
            Logger.LogInformation("Loaded {Count} users", AllUsers.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading users");
            ErrorMessage = $"Error loading users: {ex.Message}";
        }
        finally
        {
            IsLoadingUsers = false;
        }
    }

    private void SelectUser(UserProfile user)
    {
        SelectedUser = user;
        UserSearchText = user.DisplayName;
        ShowUserDropdown = false;
    }

    private void ClearSelectedUser()
    {
        SelectedUser = null;
        UserSearchText = string.Empty;
    }

    private async Task AuditSingleUserAsync()
    {
        if (SelectedUser == null || IsTestingUser) return;

        IsTestingUser = true;
        ErrorMessage = null;
        ShowUserDropdown = false;

        var stopwatch = System.Diagnostics.Stopwatch.StartNew();

        try
        {
            Logger.LogInformation("Auditing single user: {User}", SelectedUser.Mail);
            var result = await AuditService.AuditUserAsync(SelectedUser.Id);

            stopwatch.Stop();

            // Display as a single-item audit result
            AuditResults = new List<SignatureAuditResult> { result };
            AuditSummary = AuditService.CalculateSummary(AuditResults, stopwatch.Elapsed);

            Logger.LogInformation("Single user audit complete. Status: {Status}", result.Status);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error auditing single user");
            ErrorMessage = $"Error auditing user: {ex.Message}";
        }
        finally
        {
            IsTestingUser = false;
        }
    }

    private bool IsCopying { get; set; }
    private string? SignaturePreviewHtml { get; set; }

    private async Task CopySignatureToClipboard()
    {
        if (SelectedUser == null || IsCopying) return;

        IsCopying = true;
        ErrorMessage = null;
        DeployMessage = null;

        try
        {
            // Generate signature from template using user's profile data
            var template = TemplateService.GetDefaultTemplate();
            var htmlSignature = TemplateService.RenderSignature(template, SelectedUser) ?? "";

            // Store for preview
            SignaturePreviewHtml = htmlSignature;

            // Copy HTML to clipboard so it pastes as rich text
            await JSRuntime.InvokeVoidAsync("copyHtmlToClipboard", htmlSignature);

            DeployMessage = $"Signature copied for {SelectedUser.DisplayName}! Paste into Outlook: Settings → Signatures → New signature → Paste (Ctrl+V)";
            Logger.LogInformation("Signature copied to clipboard for {User}", SelectedUser.Mail);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error copying signature for {User}", SelectedUser.Mail);
            ErrorMessage = $"Error copying signature: {ex.Message}";
        }
        finally
        {
            IsCopying = false;
        }
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    private void ClearDeployMessage()
    {
        DeployMessage = null;
        SignaturePreviewHtml = null;
    }

    private async Task RunAuditAsync()
    {
        if (IsAuditRunning) return;

        IsAuditRunning = true;
        ErrorMessage = null;
        RequiresReauth = false;
        _cancellationTokenSource = new CancellationTokenSource();

        var progress = new Progress<AuditProgress>(p =>
        {
            CurrentProgress = p;
            InvokeAsync(StateHasChanged);
        });

        var stopwatch = System.Diagnostics.Stopwatch.StartNew();

        try
        {
            Logger.LogInformation("Starting signature audit");

            AuditResults = await AuditService.AuditAllUsersAsync(progress, _cancellationTokenSource.Token);

            stopwatch.Stop();
            AuditSummary = AuditService.CalculateSummary(AuditResults, stopwatch.Elapsed);

            Logger.LogInformation("Signature audit completed: {Total} users audited, {Compliant} compliant",
                AuditSummary.TotalUsers, AuditSummary.CompliantUsers);
        }
        catch (OperationCanceledException)
        {
            Logger.LogInformation("Signature audit was cancelled");
            ErrorMessage = "Audit was cancelled.";
        }
        catch (Exception ex) when (ex is MicrosoftIdentityWebChallengeUserException ||
                                   ex.InnerException is MicrosoftIdentityWebChallengeUserException)
        {
            Logger.LogWarning("Authentication challenge required for Graph API access");
            RequiresReauth = true;

            var baseUri = NavigationManager.BaseUri.TrimEnd('/');
            ReauthUrl = $"{baseUri}/MicrosoftIdentity/Account/SignIn?redirectUri={Uri.EscapeDataString(NavigationManager.Uri)}";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during signature audit");

            if (ex.Message.Contains("Authorization_RequestDenied") ||
                ex.Message.Contains("Insufficient privileges"))
            {
                ErrorMessage = "Access denied. Please ensure the application has the required permissions (User.Read.All, MailboxSettings.ReadWrite) and admin consent has been granted.";
            }
            else
            {
                ErrorMessage = $"An error occurred during the audit: {ex.Message}";
            }
        }
        finally
        {
            IsAuditRunning = false;
            _cancellationTokenSource?.Dispose();
            _cancellationTokenSource = null;
        }
    }

    private void ShowUserDetails(SignatureAuditResult result)
    {
        SelectedResult = result;
    }

    private void CloseUserDetails()
    {
        SelectedResult = null;
    }

    public void Dispose()
    {
        _cancellationTokenSource?.Cancel();
        _cancellationTokenSource?.Dispose();
    }
}
