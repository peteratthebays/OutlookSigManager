@namespace OutlookSigManager.Components.UserAudit
@using OutlookSigManager.Models
@using OutlookSigManager.Services
@inject IGraphUserService GraphUserService
@inject IUserOverrideStorageService OverrideStorage
@inject ILogger<UserEditGrid> Logger

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-people me-2"></i>User Directory (@FilteredUsers.Count() of @Users.Count users)</span>
        <div class="d-flex gap-2 align-items-center">
            <input type="text"
                   class="form-control form-control-sm"
                   style="width: 250px;"
                   placeholder="Search users..."
                   @bind="SearchText"
                   @bind:event="oninput" />
            <button class="btn btn-outline-secondary btn-sm"
                    @onclick="RefreshUsers"
                    disabled="@IsLoading">
                @if (IsLoading)
                {
                    <span class="spinner-border spinner-border-sm"></span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise"></i>
                }
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        @if (ErrorMessage != null)
        {
            <div class="alert alert-danger m-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@ErrorMessage
            </div>
        }

        @if (SelectedErrorUser != null)
        {
            <div class="alert alert-danger m-3 alert-dismissible" role="alert">
                <h6><i class="bi bi-exclamation-triangle-fill me-2"></i>Error saving @SelectedErrorUser.DisplayName</h6>
                <hr class="my-2" />
                <pre class="mb-0 small" style="white-space: pre-wrap;">@SelectedErrorUser.SaveError</pre>
                <button type="button" class="btn-close" @onclick="() => SelectedErrorUser = null"></button>
            </div>
        }

        <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
            <table class="table table-hover table-sm mb-0">
                <thead class="table-light sticky-top">
                    <tr>
                        <th style="width: 180px;">Display Name</th>
                        <th style="width: 200px;">Email</th>
                        <th>Job Title</th>
                        <th>Department</th>
                        <th>Business Phone</th>
                        <th>Mobile Phone</th>
                        <th>Pronouns</th>
                        <th>DECT</th>
                        <th>Working Days</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (IsLoading)
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4">
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                Loading users...
                            </td>
                        </tr>
                    }
                    else if (!FilteredUsers.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center py-4 text-muted">
                                @if (Users.Count == 0)
                                {
                                    <span>No users found. Click refresh to load users.</span>
                                }
                                else
                                {
                                    <span>No users match your search criteria.</span>
                                }
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in FilteredUsers)
                        {
                            var rowClass = user.IsDirty ? "table-warning" : (user.HasOverride ? "table-info" : (user.SaveError != null ? "table-danger" : ""));
                            <tr class="@rowClass">
                                <td>
                                    <strong>@user.DisplayName</strong>
                                    @if (user.HasOverride)
                                    {
                                        <i class="bi bi-database-fill text-info ms-1" title="Has saved overrides"></i>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@user.Mail</small>
                                </td>
                                <InlineEditCell Value="@user.JobTitle"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.JobTitle), v))"
                                               IsDirty="@(user.JobTitle != user.OriginalJobTitle)" />
                                <InlineEditCell Value="@user.Department"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.Department), v))"
                                               IsDirty="@(user.Department != user.OriginalDepartment)" />
                                <InlineEditCell Value="@user.BusinessPhone"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.BusinessPhone), v))"
                                               IsDirty="@(user.BusinessPhone != user.OriginalBusinessPhone)" />
                                <InlineEditCell Value="@user.MobilePhone"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.MobilePhone), v))"
                                               IsDirty="@(user.MobilePhone != user.OriginalMobilePhone)" />
                                <InlineEditCell Value="@user.Pronouns"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.Pronouns), v))"
                                               IsDirty="@(user.Pronouns != user.OriginalPronouns)" />
                                <InlineEditCell Value="@user.DectPhone"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.DectPhone), v))"
                                               IsDirty="@(user.DectPhone != user.OriginalDectPhone)" />
                                <InlineEditCell Value="@user.WorkingDays"
                                               ValueChanged="@(v => OnFieldChanged(user, nameof(user.WorkingDays), v))"
                                               IsDirty="@(user.WorkingDays != user.OriginalWorkingDays)" />
                                <td>
                                    @if (user.IsSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm text-primary"></span>
                                    }
                                    else if (user.IsDirty)
                                    {
                                        <div class="btn-group btn-group-sm">
                                            <button type="button"
                                                    class="btn btn-success btn-sm"
                                                    @onclick="() => SaveUser(user)"
                                                    @onclick:preventDefault="true"
                                                    title="Save changes">
                                                <i class="bi bi-check-lg"></i> Save
                                            </button>
                                            <button type="button"
                                                    class="btn btn-outline-secondary btn-sm"
                                                    @onclick="() => RevertUser(user)"
                                                    title="Revert changes">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    }
                                    else if (user.SaveError != null)
                                    {
                                        <button class="btn btn-outline-danger btn-sm"
                                                @onclick="() => ShowError(user)"
                                                title="Click to see error details">
                                            <i class="bi bi-exclamation-circle"></i> Error
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @if (DirtyCount > 0)
    {
        <div class="card-footer bg-warning-subtle">
            <div class="d-flex justify-content-between align-items-center">
                <span><i class="bi bi-exclamation-triangle me-2"></i>@DirtyCount unsaved change(s)</span>
                <div class="btn-group">
                    <button type="button" class="btn btn-success btn-sm" @onclick="SaveAllChanges" @onclick:preventDefault="true" disabled="@IsSavingAll">
                        @if (IsSavingAll)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        <i class="bi bi-check-all me-1"></i>Save All
                    </button>
                    <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="RevertAllChanges">
                        <i class="bi bi-x-lg me-1"></i>Revert All
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public IReadOnlyList<UserProfile> InitialUsers { get; set; } = Array.Empty<UserProfile>();
    [Parameter] public EventCallback OnRefreshRequested { get; set; }

    private List<EditableUserProfile> Users { get; set; } = new();
    private string SearchText { get; set; } = string.Empty;
    private bool IsLoading { get; set; }
    private bool IsSavingAll { get; set; }
    private string? ErrorMessage { get; set; }
    private EditableUserProfile? SelectedErrorUser { get; set; }

    private IEnumerable<EditableUserProfile> FilteredUsers
    {
        get
        {
            if (string.IsNullOrWhiteSpace(SearchText))
                return Users;

            var search = SearchText.ToLowerInvariant();
            return Users.Where(u =>
                (u.DisplayName?.ToLowerInvariant().Contains(search) ?? false) ||
                (u.Mail?.ToLowerInvariant().Contains(search) ?? false) ||
                (u.Department?.ToLowerInvariant().Contains(search) ?? false) ||
                (u.JobTitle?.ToLowerInvariant().Contains(search) ?? false));
        }
    }

    private int DirtyCount => Users.Count(u => u.IsDirty);

    protected override async Task OnParametersSetAsync()
    {
        if (InitialUsers.Count > 0 && Users.Count == 0)
        {
            await LoadUsersWithOverrides(InitialUsers);
        }
    }

    private async Task LoadUsersWithOverrides(IReadOnlyList<UserProfile> users)
    {
        var editableUsers = users.Select(EditableUserProfile.FromUserProfile).ToList();

        // Load all overrides from database
        var allOverrides = await OverrideStorage.GetAllOverridesAsync();
        var overrideDict = allOverrides.ToDictionary(o => o.UserId, o => o);

        // Apply overrides to each user
        foreach (var user in editableUsers)
        {
            if (overrideDict.TryGetValue(user.Id, out var savedOverride))
            {
                Logger.LogInformation(
                    "Applying override for {UserId}: Dept={Dept}, Phone={Phone}, Mobile={Mobile}",
                    user.Id,
                    savedOverride.OverrideDepartment,
                    savedOverride.OverrideBusinessPhone,
                    savedOverride.OverrideMobilePhone);
                user.ApplyOverride(savedOverride);
            }
        }

        Users = editableUsers;
    }

    private async Task RefreshUsers()
    {
        if (IsLoading) return;

        IsLoading = true;
        ErrorMessage = null;

        try
        {
            var users = await GraphUserService.GetAllUsersAsync();
            await LoadUsersWithOverrides(users);
            await OnRefreshRequested.InvokeAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error refreshing users");
            ErrorMessage = $"Error loading users: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void OnFieldChanged(EditableUserProfile user, string fieldName, string? value)
    {
        switch (fieldName)
        {
            case nameof(EditableUserProfile.JobTitle):
                user.JobTitle = value;
                break;
            case nameof(EditableUserProfile.Department):
                user.Department = value;
                break;
            case nameof(EditableUserProfile.BusinessPhone):
                user.BusinessPhone = value;
                break;
            case nameof(EditableUserProfile.MobilePhone):
                user.MobilePhone = value;
                break;
            case nameof(EditableUserProfile.Pronouns):
                user.Pronouns = value;
                break;
            case nameof(EditableUserProfile.DectPhone):
                user.DectPhone = value;
                break;
            case nameof(EditableUserProfile.WorkingDays):
                user.WorkingDays = value;
                break;
        }

        user.CheckDirty();
        user.SaveError = null;
        StateHasChanged();
    }

    private async Task SaveUser(EditableUserProfile user)
    {
        if (user.IsSaving) return;

        user.IsSaving = true;
        user.SaveError = null;
        StateHasChanged();

        try
        {
            var userOverride = user.ToUserOverride();

            Logger.LogInformation(
                "Saving user override {UserId}: Title={Title}, Dept={Dept}, Phone={Phone}, Mobile={Mobile}, Pronouns={Pronouns}, DECT={Dect}, WorkingDays={WorkingDays}",
                user.Id,
                userOverride.OverrideJobTitle,
                userOverride.OverrideDepartment,
                userOverride.OverrideBusinessPhone,
                userOverride.OverrideMobilePhone,
                userOverride.Pronouns,
                userOverride.DectPhone,
                userOverride.WorkingDays);

            await OverrideStorage.SaveOverrideAsync(userOverride);

            user.AcceptChanges();
            Logger.LogInformation("Successfully saved override for user {UserId}", user.Id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving user {UserId}", user.Id);
            user.SaveError = ex.Message;
        }
        finally
        {
            user.IsSaving = false;
            StateHasChanged();
        }
    }

    private void RevertUser(EditableUserProfile user)
    {
        user.RevertChanges();
        StateHasChanged();
    }

    private void ShowError(EditableUserProfile user)
    {
        SelectedErrorUser = user;
        StateHasChanged();
    }

    private async Task SaveAllChanges()
    {
        if (IsSavingAll) return;

        IsSavingAll = true;
        StateHasChanged();

        var dirtyUsers = Users.Where(u => u.IsDirty).ToList();

        foreach (var user in dirtyUsers)
        {
            await SaveUser(user);
        }

        IsSavingAll = false;
        StateHasChanged();
    }

    private void RevertAllChanges()
    {
        foreach (var user in Users.Where(u => u.IsDirty))
        {
            user.RevertChanges();
        }
        StateHasChanged();
    }

    public async Task UpdateUsers(IReadOnlyList<UserProfile> users)
    {
        await LoadUsersWithOverrides(users);
    }
}
