@namespace OutlookSigManager.Components.SignatureCreator
@using OutlookSigManager.Models

<div class="card mb-3">
    <div class="card-header">
        <i class="bi bi-person-circle me-2"></i>Your Profile
    </div>
    <div class="card-body">
        @if (User == null)
        {
            <div class="text-center py-3 text-muted">
                <span class="spinner-border spinner-border-sm me-2"></span>
                Loading your profile...
            </div>
        }
        else
        {
            <div class="mb-3 p-3 bg-light rounded">
                <div class="row">
                    <div class="col-sm-6">
                        <small class="text-muted d-block">Name</small>
                        <strong>@User.DisplayName</strong>
                    </div>
                    <div class="col-sm-6">
                        <small class="text-muted d-block">Email</small>
                        <strong>@User.Mail</strong>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-sm-6">
                        <small class="text-muted d-block">Job Title</small>
                        @(User.JobTitle ?? "-")
                    </div>
                    <div class="col-sm-6">
                        <small class="text-muted d-block">Department</small>
                        @(User.Department ?? "-")
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-pencil-square me-2"></i>Customize Your Signature</span>
        @if (Overrides.HasOverrides())
        {
            <button class="btn btn-outline-secondary btn-sm" @onclick="ClearOverrides">
                <i class="bi bi-x-lg me-1"></i>Clear All
            </button>
        }
    </div>
    <div class="card-body">
        <div class="alert alert-info mb-3">
            <i class="bi bi-info-circle me-2"></i>
            <small>Changes here are for <strong>your signature only</strong> and will NOT update your Entra ID profile.</small>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Display Name Override</label>
                <input type="text"
                       class="form-control"
                       placeholder="@(User?.DisplayName ?? "Your name")"
                       @bind="Overrides.OverrideName"
                       @bind:event="oninput"
                       @bind:after="NotifyChanged" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Preferred Pronouns</label>
                <input type="text"
                       class="form-control"
                       placeholder="e.g., He/Him, She/Her, They/Them"
                       @bind="Overrides.Pronouns"
                       @bind:event="oninput"
                       @bind:after="NotifyChanged" />
                <small class="text-muted">Appears after your name, e.g., "Jane Smith (She/Her)"</small>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center">
                    <label class="form-label mb-0">Job Title Override</label>
                    @if (!string.IsNullOrWhiteSpace(User?.JobTitle))
                    {
                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" role="switch"
                                   id="show-jobTitle"
                                   checked="@(!IsFieldHidden("jobTitle"))"
                                   @onchange="@(e => ToggleFieldVisibility("jobTitle", e))" />
                            <label class="form-check-label small text-muted" for="show-jobTitle">Show</label>
                        </div>
                    }
                </div>
                @if (IsFieldHidden("jobTitle"))
                {
                    <input type="text" class="form-control" disabled placeholder="Hidden from signature" />
                    <small class="text-muted fst-italic">This field will not appear in your signature</small>
                }
                else
                {
                    <input type="text"
                           class="form-control"
                           placeholder="@(User?.JobTitle ?? "Your job title")"
                           @bind="Overrides.OverrideJobTitle"
                           @bind:event="oninput"
                           @bind:after="NotifyChanged" />
                }
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center">
                    <label class="form-label mb-0">Department Override</label>
                    @if (!string.IsNullOrWhiteSpace(User?.Department))
                    {
                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" role="switch"
                                   id="show-department"
                                   checked="@(!IsFieldHidden("department"))"
                                   @onchange="@(e => ToggleFieldVisibility("department", e))" />
                            <label class="form-check-label small text-muted" for="show-department">Show</label>
                        </div>
                    }
                </div>
                @if (IsFieldHidden("department"))
                {
                    <input type="text" class="form-control" disabled placeholder="Hidden from signature" />
                    <small class="text-muted fst-italic">This field will not appear in your signature</small>
                }
                else
                {
                    <input type="text"
                           class="form-control"
                           placeholder="@(User?.Department ?? "Your department")"
                           @bind="Overrides.OverrideDepartment"
                           @bind:event="oninput"
                           @bind:after="NotifyChanged" />
                }
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center">
                    <label class="form-label mb-0">Business Phone Override</label>
                    @if (!string.IsNullOrWhiteSpace(User?.BusinessPhone))
                    {
                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" role="switch"
                                   id="show-businessPhone"
                                   checked="@(!IsFieldHidden("businessPhone"))"
                                   @onchange="@(e => ToggleFieldVisibility("businessPhone", e))" />
                            <label class="form-check-label small text-muted" for="show-businessPhone">Show</label>
                        </div>
                    }
                </div>
                @if (IsFieldHidden("businessPhone"))
                {
                    <input type="text" class="form-control" disabled placeholder="Hidden from signature" />
                    <small class="text-muted fst-italic">This field will not appear in your signature</small>
                }
                else
                {
                    <input type="text"
                           class="form-control"
                           placeholder="@(User?.BusinessPhone ?? "Phone number")"
                           @bind="Overrides.OverrideBusinessPhone"
                           @bind:event="oninput"
                           @bind:after="NotifyChanged" />
                }
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center">
                    <label class="form-label mb-0">Mobile Phone Override</label>
                    @if (!string.IsNullOrWhiteSpace(User?.MobilePhone))
                    {
                        <div class="form-check form-switch mb-0">
                            <input class="form-check-input" type="checkbox" role="switch"
                                   id="show-mobilePhone"
                                   checked="@(!IsFieldHidden("mobilePhone"))"
                                   @onchange="@(e => ToggleFieldVisibility("mobilePhone", e))" />
                            <label class="form-check-label small text-muted" for="show-mobilePhone">Show</label>
                        </div>
                    }
                </div>
                @if (IsFieldHidden("mobilePhone"))
                {
                    <input type="text" class="form-control" disabled placeholder="Hidden from signature" />
                    <small class="text-muted fst-italic">This field will not appear in your signature</small>
                }
                else
                {
                    <input type="text"
                           class="form-control"
                           placeholder="@(User?.MobilePhone ?? "Mobile number")"
                           @bind="Overrides.OverrideMobilePhone"
                           @bind:event="oninput"
                           @bind:after="NotifyChanged" />
                }
            </div>
            <div class="col-md-6">
                <label class="form-label">DECT Phone</label>
                <input type="text"
                       class="form-control"
                       placeholder="Internal DECT number"
                       @bind="Overrides.DectPhone"
                       @bind:event="oninput"
                       @bind:after="NotifyChanged" />
                <small class="text-muted">Optional - shows in signature if enabled in template</small>
            </div>
            <div class="col-md-6">
                <label class="form-label">Working Days</label>
                <input type="text"
                       class="form-control"
                       placeholder="e.g., Mon-Thu, Part-time"
                       @bind="Overrides.WorkingDays"
                       @bind:event="oninput"
                       @bind:after="NotifyChanged" />
                <small class="text-muted">Optional - shows in signature if enabled in template</small>
            </div>
        </div>

        @* Save to local database section *@
        <hr class="my-3" />
        <div class="d-flex justify-content-between align-items-center">
            <div>
                @if (HasSavedOverrides)
                {
                    <small class="text-muted"><i class="bi bi-check-circle text-success me-1"></i>You have saved preferences</small>
                }
                else
                {
                    <small class="text-muted">Save your preferences for next time</small>
                }
            </div>
            <button class="btn btn-primary btn-sm"
                    @onclick="OnSaveRequested"
                    disabled="@(IsSaving || !Overrides.HasOverrides())">
                @if (IsSaving)
                {
                    <span class="spinner-border spinner-border-sm me-1"></span>
                }
                <i class="bi bi-save me-1"></i>Save My Preferences
            </button>
        </div>
        @if (SaveSuccess)
        {
            <div class="alert alert-success mt-2 mb-0 py-2">
                <i class="bi bi-check-circle me-1"></i>Preferences saved! They'll be loaded automatically next time.
            </div>
        }
        @if (SaveError != null)
        {
            <div class="alert alert-danger mt-2 mb-0 py-2">
                <i class="bi bi-exclamation-circle me-1"></i>@SaveError
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public UserProfile? User { get; set; }
    [Parameter] public SignatureFieldOverride Overrides { get; set; } = new();
    [Parameter] public EventCallback<SignatureFieldOverride> OverridesChanged { get; set; }

    // Save to local database
    [Parameter] public EventCallback OnSaveRequested { get; set; }
    [Parameter] public bool HasSavedOverrides { get; set; }
    [Parameter] public bool IsSaving { get; set; }
    [Parameter] public bool SaveSuccess { get; set; }
    [Parameter] public string? SaveError { get; set; }

    private bool IsFieldHidden(string fieldId) => Overrides.HiddenFields.Contains(fieldId);

    private async Task ToggleFieldVisibility(string fieldId, ChangeEventArgs e)
    {
        var show = (bool)(e.Value ?? true);
        if (show)
        {
            Overrides.HiddenFields.Remove(fieldId);
        }
        else
        {
            Overrides.HiddenFields.Add(fieldId);
            // Clear any override value for this field since it's now hidden
            switch (fieldId.ToLowerInvariant())
            {
                case "jobtitle": Overrides.OverrideJobTitle = null; break;
                case "department": Overrides.OverrideDepartment = null; break;
                case "businessphone": Overrides.OverrideBusinessPhone = null; break;
                case "mobilephone": Overrides.OverrideMobilePhone = null; break;
            }
        }
        await NotifyChanged();
    }

    private async Task NotifyChanged()
    {
        await OverridesChanged.InvokeAsync(Overrides);
    }

    private async Task ClearOverrides()
    {
        Overrides.Clear();
        await NotifyChanged();
    }
}
